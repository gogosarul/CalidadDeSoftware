<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="app.controlcliente.cliente.MainActivity"
    android:id="@+id/main">

    <TextView
        android:text="Seleccione un elemento para el control de Clientes."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:id="@+id/grid_main"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/agregar_text"
            android:id="@+id/agregarbtn"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClick"
            android:background="@android:color/holo_green_dark"
            android:textColor="@color/primary_text_default_material_dark" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/eliminar_btn"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onEliminar"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/primary_text_default_material_dark"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/listar_text"
            android:id="@+id/listarbtn"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onListar"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@color/primary_text_default_material_dark"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/modificar_btn"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="premodificar"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@color/primary_text_default_material_dark"/>
    </GridLayout>

</RelativeLayout>
